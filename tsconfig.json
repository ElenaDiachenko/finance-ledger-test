{
 "compilerOptions": {
  "target": "ESNext",
  "lib": ["DOM", "DOM.Iterable", "ESNext"],
  "module": "ESNext",
  "skipLibCheck": true,

  /* Bundler mode */
  "moduleResolution": "bundler",
  "allowImportingTsExtensions": true,
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  "jsx": "react-jsx",
  "baseUrl": "src",
  "paths": {
   "components/*": ["components/*"],
   "pages/*": ["pages/*"],
   "hooks/*": ["hooks/*"],
   "utils/*": ["utils/*"],
   "types/*": ["types/*"],
   "styles/*": ["styles/*"],
   "assets/*": ["assets/*"],
   "constants/*": ["constants/*"]
  },
  /* Linting */
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true
 },
 "include": ["src"],
 "references": [{ "path": "./tsconfig.node.json" }]
}
